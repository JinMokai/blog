---
import TagLayout from "@layouts/TagLayout.astro";
import Tags from "@components/tags.astro";
import { getCollection } from "astro:content";
const tagsEntries = await getCollection("blog");
const tags = [...new Set(tagsEntries.map((post) => post.data.tags).flat())];
console.log(tags);
// page info
const title = "分类";
const description = "分类";
---

<TagLayout title={title} description={description}>
  <main>
    <h1 class="tags_skill">技能</h1>
    <Tags tags={tags}/>
  </main>
</TagLayout>

<style>
  main {
    width: min(60ch, 80vw);
    margin: 0 auto;
    font-size: 0.75rem;
  }
  .tags_skill {
    font-size: 2rem;
    margin-block-end: 1rem;
  }
  a {
    color: black;
  }

